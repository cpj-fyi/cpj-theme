<article class="post-card post-card-essay {{post_class}}">
    <div class="post-card-content">
        <div class="ds-meta-tag-wrapper">
            {{#foreach tags}}
                {{#match slug "essays"}}
                {{else match slug "radar"}}
                {{else match slug "five-things"}}
                {{else}}
                    <span class="ds-meta-item">{{name}}</span>
                {{/match}}
            {{/foreach}}
        </div>

        <h3 class="post-card-title">
            <a href="{{url}}">{{title}}</a>
        </h3>

        <p class="post-card-excerpt">{{excerpt}}</p>

        <div class="ds-meta">
            <span class="ds-meta-item">{{date format="MMM D, YYYY"}}</span>
            {{#if reading_time}}
                <span class="ds-meta-item">{{reading_time}}</span>
            {{/if}}
        </div>
    </div>
</article>
