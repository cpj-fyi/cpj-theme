<article class="post-card post-card-radar {{post_class}}">
    <h3 class="post-card-title">
        <a href="{{url}}">{{title}}</a>
    </h3>

    {{#if excerpt}}
        <p class="post-card-excerpt">{{excerpt}}</p>
    {{/if}}

    <div class="post-card-meta">
        <span>{{date format="MMM D, YYYY"}}</span>
        {{#if reading_time}}
            <span>{{reading_time}}</span>
        {{/if}}
    </div>
</article>
