{{!< default}}

{{!--
    Radar archive template
    Dark mode design matching essays/five-things structure
--}}

<div class="radar-feed">
    <header class="archive-header archive-header-radar">
        <div class="container">
            <h1 class="archive-title">Radar</h1>
            {{#if tag.description}}
                <p class="archive-description">{{tag.description}}</p>
            {{else}}
                <p class="archive-description">Daily observations on organization design.</p>
            {{/if}}
            {{#get "posts" filter="tag:radar" limit="100"}}
                <div class="archive-count">{{plural posts.length empty="No posts" singular="% post" plural="% posts"}}</div>
            {{/get}}
        </div>
        <div class="radar-dot"></div>
    </header>

    <div class="container">
        <div class="essays-layout">
            <div class="essays-main">
                {{#get "posts" filter="tag:radar" limit="100" include="tags,authors"}}
                    {{#if posts}}
                        <div class="essays-grid">
                            {{#foreach posts}}
                                {{> "post-card-essay"}}
                            {{/foreach}}
                        </div>
                    {{else}}
                        <p>No radar posts yet.</p>
                    {{/if}}
                {{/get}}
            </div>

            <aside class="sidebar">
                {{> "sidebar"}}
            </aside>
        </div>
    </div>
</div>
