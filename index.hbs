{{!< default}}

{{!-- Hero banner with author name --}}
<div class="home-hero">
    <div class="container">
        <h1 class="home-hero-name">{{@custom.book_author}}</h1>
        {{#if @site.description}}
            <p class="home-hero-description">{{@site.description}}</p>
        {{/if}}
    </div>
</div>

<div class="container">
    <div class="home-layout">
        {{!-- Left column: Book section --}}
        <div class="home-book">
            <div class="book-label">The Book</div>
            <div class="book-cover">
                <img src="https://www.cpj.fyi/content/images/2025/06/hidden-patterns-clay-parker-jones-book-6.jpg" alt="{{@custom.book_title}}">
            </div>
            <div class="book-header">
                <h1 class="book-title">{{@custom.book_title}}</h1>
                <div class="book-author">by {{@custom.book_author}}</div>
            </div>

            <ul class="book-sections">
                <li class="book-section-item">
                    <a href="{{@site.url}}/tag/start-end/" class="book-section-link">
                        <span>Start & End</span>
                        <span class="book-section-count">{{#get "pages" filter="tag:start-end" limit="100"}}{{#foreach pages}}{{#if @last}}{{@number}}{{/if}}{{/foreach}}{{/get}} chapters</span>
                    </a>
                </li>
                <li class="book-section-item">
                    <a href="{{@site.url}}/tag/foundations/" class="book-section-link">
                        <span>Foundations</span>
                        <span class="book-section-count">{{#get "pages" filter="tag:foundations" limit="100"}}{{#foreach pages}}{{#if @last}}{{@number}}{{/if}}{{/foreach}}{{/get}} chapters</span>
                    </a>
                </li>
                <li class="book-section-item">
                    <a href="{{@site.url}}/tag/structuring/" class="book-section-link">
                        <span>Structuring</span>
                        <span class="book-section-count">{{#get "pages" filter="tag:structuring" limit="100"}}{{#foreach pages}}{{#if @last}}{{@number}}{{/if}}{{/foreach}}{{/get}} chapters</span>
                    </a>
                </li>
                <li class="book-section-item">
                    <a href="{{@site.url}}/tag/direction/" class="book-section-link">
                        <span>Direction</span>
                        <span class="book-section-count">{{#get "pages" filter="tag:direction" limit="100"}}{{#foreach pages}}{{#if @last}}{{@number}}{{/if}}{{/foreach}}{{/get}} chapters</span>
                    </a>
                </li>
                <li class="book-section-item">
                    <a href="{{@site.url}}/tag/practice/" class="book-section-link">
                        <span>Practice</span>
                        <span class="book-section-count">{{#get "pages" filter="tag:practice" limit="100"}}{{#foreach pages}}{{#if @last}}{{@number}}{{/if}}{{/foreach}}{{/get}} chapters</span>
                    </a>
                </li>
                <li class="book-section-item">
                    <a href="{{@site.url}}/tag/learning/" class="book-section-link">
                        <span>Learning</span>
                        <span class="book-section-count">{{#get "pages" filter="tag:learning" limit="100"}}{{#foreach pages}}{{#if @last}}{{@number}}{{/if}}{{/foreach}}{{/get}} chapters</span>
                    </a>
                </li>
                <li class="book-section-item">
                    <a href="{{@site.url}}/tag/space/" class="book-section-link">
                        <span>Space</span>
                        <span class="book-section-count">{{#get "pages" filter="tag:space" limit="100"}}{{#foreach pages}}{{#if @last}}{{@number}}{{/if}}{{/foreach}}{{/get}} chapters</span>
                    </a>
                </li>
            </ul>

            <div class="book-buttons">
                <a href="{{@site.url}}/tag/start-end/" class="btn btn-primary btn-large">Start Reading</a>
                <a href="https://www.amazon.com/Hidden-Patterns-Playbook-Human-Workplaces/dp/1637748582" class="btn btn-primary btn-large" target="_blank" rel="noopener">Buy</a>
            </div>
        </div>

        {{!-- Middle column: Essays --}}
        <section class="home-essays">
            <h2 class="section-title section-title-essays">Essays</h2>

            {{#get "posts" filter="tag:essays" limit="4" include="tags"}}
                {{#if posts}}
                    <div class="essays-feed">
                        {{#foreach posts}}
                            <article class="essay-card">
                                <h3 class="essay-card-title">
                                    <a href="{{url}}">{{title}}</a>
                                </h3>
                                <p class="essay-card-excerpt">{{excerpt}}</p>
                                <div class="ds-meta">
                                    {{#foreach tags}}
                                        {{#match slug "essays"}}
                                        {{else match slug "radar"}}
                                        {{else match slug "five-things"}}
                                        {{else}}
                                            {{#if @first}}
                                                <a href="{{url}}" class="ds-meta-item">{{name}}</a>
                                            {{/if}}
                                        {{/match}}
                                    {{/foreach}}
                                    <span class="ds-meta-item">{{date format="MM DD YY"}}</span>
                                    {{#if reading_time}}
                                        <span class="ds-meta-item">{{reading_time}}</span>
                                    {{/if}}
                                </div>
                            </article>
                        {{/foreach}}
                    </div>
                {{/if}}
            {{/get}}
        </section>

        {{!-- Right column: Five Things --}}
        <section class="home-five-things">
            <h2 class="section-title section-title-five-things">Five Things</h2>

            {{#get "posts" filter="tag:five-things" limit="5" include="tags"}}
                {{#if posts}}
                    <div class="five-things-feed">
                        {{#foreach posts}}
                            <article class="five-things-card">
                                <h3 class="five-things-card-title">
                                    <a href="{{url}}">{{title}}</a>
                                </h3>
                                <p class="five-things-card-excerpt">{{excerpt}}</p>
                            </article>
                        {{/foreach}}
                    </div>
                {{/if}}
            {{/get}}
        </section>
    </div>
</div>

{{!-- Radar section - full width dark mode --}}
<section class="home-radar-section">
    <div class="container">
        <div class="section-header section-header-radar">
            <div class="section-header-content">
                <h2 class="section-title section-title-radar">Radar</h2>
                <p class="section-subtitle">Daily observations on organization design.</p>
            </div>
            <a href="{{@site.url}}/radar/" class="section-link">View all</a>
            <div class="radar-dot"></div>
        </div>

        {{#get "posts" filter="tag:radar" limit="3" include="tags"}}
            {{#if posts}}
                <div class="related-posts-grid">
                    {{#foreach posts}}
                        <article class="post-card post-card-text-only">
                            <div class="ds-meta-tag-wrapper">
                                {{#foreach tags}}
                                    {{#match slug "essays"}}
                                    {{else match slug "radar"}}
                                    {{else match slug "five-things"}}
                                    {{else}}
                                        <span class="ds-meta-item">{{name}}</span>
                                    {{/match}}
                                {{/foreach}}
                            </div>
                            <h3 class="post-card-title">
                                <a href="{{url}}">{{title}}</a>
                            </h3>
                            <p class="post-card-excerpt">{{excerpt}}</p>
                            <div class="ds-meta">
                                <span class="ds-meta-item">{{date format="MMM D, YYYY"}}</span>
                                {{#if reading_time}}
                                    <span class="ds-meta-item">{{reading_time}}</span>
                                {{/if}}
                            </div>
                        </article>
                    {{/foreach}}
                </div>
            {{/if}}
        {{/get}}
    </div>
</section>
