{{!< default}}

{{!--
    Five Things archive template
    A collection for "Five Things" posts
    Uses {{#get}} to fetch all posts with five-things tag
--}}

<header class="archive-header">
    <div class="container">
        <h1 class="archive-title">Five Things</h1>
        {{#if tag.description}}
            <p class="archive-description">{{tag.description}}</p>
        {{else}}
            <p class="archive-description">Quick lists of five.</p>
        {{/if}}
        {{#get "posts" filter="tag:five-things" limit="100"}}
            <div class="archive-count">{{plural posts.length empty="No posts" singular="% post" plural="% posts"}}</div>
        {{/get}}
    </div>
</header>

<div class="container">
    <div class="essays-layout">
        <div class="essays-main">
            {{#get "posts" filter="tag:five-things" limit="100" include="tags,authors"}}
                {{#if posts}}
                    <div class="essays-grid">
                        {{#foreach posts}}
                            {{> "post-card-essay"}}
                        {{/foreach}}
                    </div>
                {{else}}
                    <p>No posts yet.</p>
                {{/if}}
            {{/get}}
        </div>

        <aside class="sidebar">
            {{> "sidebar"}}
        </aside>
    </div>
</div>
