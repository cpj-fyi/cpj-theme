{{!< default}}

{{!--
    Foundations section - Book subsection template
    Shows all chapters in the Foundations section
    Section navigation handled by top nav (book-subnav)
--}}

<header class="archive-header">
    <div class="container">
        <div class="book-label">{{@custom.book_title}}</div>
        <h1 class="archive-title">{{tag.name}}</h1>
        {{#if tag.description}}
            <p class="archive-description">{{tag.description}}</p>
        {{/if}}
    </div>
</header>

<div class="container">
    <div class="section-content">
        {{#get "pages" filter="tag:foundations" limit="50" order="published_at asc"}}
            {{#if pages}}
                <div class="chapter-list-detailed">
                    {{#foreach pages}}
                        <article class="chapter-list-item-detailed">
                            <h3 class="chapter-list-item-title">
                                <a href="{{url}}">{{title}}</a>
                            </h3>
                            {{#if custom_excerpt}}
                                <p class="chapter-list-item-excerpt">{{custom_excerpt}}</p>
                            {{/if}}
                        </article>
                    {{/foreach}}
                </div>
            {{else}}
                <p>No chapters available yet.</p>
            {{/if}}
        {{/get}}
    </div>
</div>
